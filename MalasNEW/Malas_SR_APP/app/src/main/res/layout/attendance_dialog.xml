<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.6"
            android:layout_gravity="left"
            android:text="Attendance"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/tv_attendance_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.4"
            android:text=""
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@color/White"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <!--<EditText

        android:id="@+id/search_attendance_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:visibility="visible" />-->

    <!-- <ListView

         android:id="@+id/attendance_listview"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="10dp"
         android:scrollbars="none"></ListView>-->
    <LinearLayout
        android:id="@+id/ll_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_field_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Field Work"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_other_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Other Work"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_leave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_work"
        android:gravity="center">

        <Button
            android:id="@+id/btn_leave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Leave"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_off_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:gravity="center"
            android:text="Day-OFF"
            android:textColor="@color/White"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>