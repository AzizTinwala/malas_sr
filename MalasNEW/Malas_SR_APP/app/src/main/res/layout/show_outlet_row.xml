<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llOutletRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_highlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rectangle"
                android:padding="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textAllCaps="true"
                android:text="outlet"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/more_con" />

            <ImageView
                android:id="@+id/iv_productive"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/baseline_shopping_cart_light_green_800_24dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_non_productive"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_remove_shopping_cart_24"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_history"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_file_copy_24"
                android:visibility="gone" />



        </LinearLayout>
    </RelativeLayout>

</LinearLayout>