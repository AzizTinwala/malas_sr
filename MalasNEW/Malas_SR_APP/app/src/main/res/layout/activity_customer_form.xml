<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Activity Name"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_cust_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:drawableLeft="@drawable/username_icon"
                    android:drawablePadding="5dp"
                    android:hint="CUSTOMER NAME*"
                    android:maxLength="100"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_cust_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:drawableLeft="@drawable/mobile_icon"
                    android:drawablePadding="5dp"
                    android:hint="CUSTOMER CONTACT*"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_cust_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:drawableLeft="@drawable/email_icon"
                    android:drawablePadding="5dp"
                    android:hint="CUSTOMER EMAIL*"
                    android:maxLength="100"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/spnr_product_sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/drop_down_icon"
                    android:focusable="false"
                    android:hint="PRODUCT SOLD*"
                    android:maxLines="1"

                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/product_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <EditText
                    android:id="@+id/spnr_select_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/drop_down_icon"
                    android:focusable="false"
                    android:hint="SELECT PRODUCT*"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/product_selected_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <ListView
                    android:id="@+id/lv_rating_act"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="gone">


                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/submit_button_selector"
                    android:drawableLeft="@drawable/submit_btn_icon"
                    android:hint="Submit"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/White" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


