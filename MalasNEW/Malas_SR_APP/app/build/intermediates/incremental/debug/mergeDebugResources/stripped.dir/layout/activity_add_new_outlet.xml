<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/territory_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Territory Name"
            android:textColor="@color/Black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Firm Name"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_email_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="3dp"
                    android:text="*Please enter a valid email(ex:johnsmith@abc.com)"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select Country"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <!--            <Spinner
                            android:id="@+id/spinner_country_outlet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_down"
                            android:dropDownWidth="wrap_content"
                            android:spinnerMode="dropdown" />-->

            <!--android:drawableRight="@drawable/drop_down_icon"-->
            <EditText
                android:id="@+id/edt_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:hint="Country"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select State"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <!--            <Spinner
                            android:id="@+id/spinner_state_outlet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drop_down"
                            android:dropDownWidth="wrap_content"
                            android:spinnerMode="dropdown" />-->

            <EditText
                android:id="@+id/edt_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:hint="State"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select Territory"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_territory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:hint="Territory"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select District"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_District"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:hint="District"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select City"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edt_City"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:hint="City"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_mobile_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_address_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Address"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:text="*Select Type of Appointment"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spin_type_of_appontment_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drop_down"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dropdown" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:text="*Select Supply Chain"
                    android:textColor="@color/Black"
                    android:textSize="11dp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spin_slect_supply_chain_outlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drop_down"
                android:dropDownWidth="wrap_content"
                android:spinnerMode="dropdown"
                android:visibility="gone" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn_selector"
                android:gravity="center"
                android:text="Personal Information"
                android:textColor="@color/White"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_contect_person_name_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Contact person Name"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_residtial_address_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Residential Address"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_contact_number_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_bg"
                    android:hint="Contact Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="10dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_catagory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category handler"
                    android:textColor="@color/Blue" />

                <TextView
                    android:id="@+id/tvCatagoryHandler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="( Please fill Category )"
                    android:textColor="@color/Black"
                    android:textSize="11dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cancel_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cancel_button_selector"
                    android:drawableLeft="@drawable/cancel_bn_icon"
                    android:hint="Cancel"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/White" />

                <Button
                    android:id="@+id/btn_submit_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/submit_button_selector"
                    android:drawableLeft="@drawable/submit_btn_icon"
                    android:hint="Submit"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/White"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>