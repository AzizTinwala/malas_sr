<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/product_selected"
        >

        <TextView
            android:id="@+id/selected_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mango fruit juice"
            android:textColor="@color/Black"

            android:textStyle="bold"
            android:textSize="15sp" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/product_rating"
        android:weightSum="3"
        >

        <EditText
            android:id="@+id/spnr_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="5dp"
            android:layout_weight="1"
            android:drawableRight="@drawable/drop_down_icon"
            android:focusable="false"
            android:hint="QTY"
            android:maxLines="1"
            android:padding="10dp"

            android:textSize="10sp" />
        <EditText
            android:id="@+id/spnr_taste"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/drop_down_icon"
            android:focusable="false"
            android:hint="TASTE"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:padding="10dp"

            android:textSize="10sp" />
        <EditText
            android:id="@+id/spnr_packaging"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/drop_down_icon"
            android:focusable="false"
            android:hint="PACKAGING"
            android:maxLines="1"
            android:padding="10dp"

            android:textSize="10sp" />



    </LinearLayout>
</LinearLayout>