<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/LightGrey"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@color/White"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/Blue">

            <TextView
                android:id="@+id/tv_cust_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Customer name"
                android:textAllCaps="true"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="5dp"
                android:text="Email Id :"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.7"
                android:padding="5dp"

                android:text="cust@gmail.com"
                android:textColor="@color/Black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="5dp"
                android:text="Contact:"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.5"
                android:padding="5dp"

                android:text="89898989898"
                android:textColor="@color/Black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.2"
                android:onClick="myClickHandler"
                android:padding="5dp"
                android:text="@string/review"
                android:textColor="@color/Blue"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/ll_qty"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"

                android:text="Qty"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_qty_rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.13"


                android:textColor="@color/Black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_qty"
                    style="@style/MyRatingBar"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.1"

                    android:theme="@style/AppThemeRatingBar" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/ll_taste"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"

                android:text="Taste"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_taste"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.13"

                android:textColor="@color/Black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_taste"
                    style="@style/MyRatingBar"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.1"

                    android:theme="@style/AppThemeRatingBar" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/ll_pacakging"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"

                android:text="Packaging"
                android:textAllCaps="true"
                android:textColor="@color/Black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_packaging"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.13"


                android:textColor="@color/Black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_packaging"
                    style="@style/MyRatingBar"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.1"

                    android:theme="@style/AppThemeRatingBar" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>